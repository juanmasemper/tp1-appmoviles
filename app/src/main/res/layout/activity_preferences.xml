<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="24dp">

    <TextView
        android:id="@+id/textPlatform"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Plataforma seleccionada:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textPreferences"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Preferencias:"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textPlatform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgProgramacion"
        style="@style/UniformImageStyle"
        android:src="@drawable/programacion"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textPreferences"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgRedes"
        style="@style/UniformImageStyle"
        android:src="@drawable/redes"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgProgramacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgSeguridad"
        style="@style/UniformImageStyle"
        android:src="@drawable/seguridad"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgRedes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgHardware"
        style="@style/UniformImageStyle"
        android:src="@drawable/hardware"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgSeguridad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/imgHardware"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>